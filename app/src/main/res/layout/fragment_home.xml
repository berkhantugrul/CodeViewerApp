<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:foregroundGravity="center"
    tools:context=".HomeFragment">


    <ImageView
        android:id="@+id/home_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:src="@mipmap/app_home_logo_foreground" />

    <TextView
        android:id="@+id/home_greeting"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="190dp"
        android:gravity="center_horizontal"
        android:text="@string/home_greeting"
        android:textColor="#e67825"
        android:textAlignment="center"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/start_command"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="230dp"
        android:gravity="center_horizontal"
        android:text="@string/home_direction"
        android:textAlignment="center"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/sub_info_italic"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="@string/home_direction_sub"
        android:textSize="16sp"
        android:layout_marginTop="280dp"
        android:layout_marginHorizontal="20dp"
        android:textStyle="italic"
        android:textAlignment="center"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/low_header_home"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="@string/home_info"
        android:textColor="#e67825"
        android:textSize="17sp"
        android:layout_marginTop="320dp"
        android:textAlignment="center"
        android:gravity="center_horizontal" />


</FrameLayout>