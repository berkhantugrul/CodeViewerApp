<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:id="@+id/about_header"
        android:layout_marginStart="140dp"
        android:text="@string/about_us_header"
        android:textStyle="normal"
        android:textSize="40sp"
        android:layout_marginTop="80dp">
    </TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="180dp"
        android:layout_marginHorizontal="20dp"
        android:background="#e67825">
    </View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_marginTop="200dp"
        android:layout_marginStart="20dp"
        android:text="@string/version_info_header"
        android:textStyle="bold"
        android:textSize="15sp">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_marginTop="225dp"
        android:layout_marginStart="20dp"
        android:text="@string/version_info_txt"
        android:textStyle="normal"
        android:textSize="15sp">
    </TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="260dp"
        android:layout_marginHorizontal="20dp"
        android:background="#e67825">
    </View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_marginTop="280dp"
        android:layout_marginStart="20dp"
        android:text="@string/developer_header"
        android:textStyle="bold"
        android:textSize="15sp">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_marginTop="305dp"
        android:layout_marginStart="20dp"
        android:text="@string/developers_txt"
        android:textStyle="normal"
        android:textSize="15sp">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_marginTop="325dp"
        android:layout_marginStart="20dp"
        android:text="@string/year_copyright"
        android:textStyle="normal"
        android:textSize="15sp">
    </TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="360dp"
        android:layout_marginHorizontal="20dp"
        android:background="#e67825">
    </View>

    <Button
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="410dp"
        android:layout_marginStart="20dp"
        android:background="@color/teal_200"
        android:textColor="#000000"
        android:text="@string/open_source_licences"
        android:textSize="15sp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true">
    </Button>

    <Button
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="490dp"
        android:layout_marginStart="20dp"
        android:background="#808080"
        android:textColor="#000000"
        android:text="@string/remove_ads"
        android:textSize="15sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false">
    </Button>
</RelativeLayout>